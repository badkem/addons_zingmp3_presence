{
  "description": "ZingMp3 Presence Discord",
  "name": "ZingMp3 Presence",
  "manifest_version": 2,
  "version": "1.0",

  "icons": {
    "600": "icons/logo600.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.zingmp3.vn/*"],
      "js": ["scripts/app.js"]
    }
  ],

  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": true
  },

  "permissions": [
    "tabs",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "https://mp3.zing.vn/*",
    "https://zingmp3.vn/*"
  ],

  "browser_action": {
    "default_icon": "icons/logo600.png",
    "theme_icons": [
      {
        "light": "icons/logo600.png",
        "dark": "icons/logo600.png",
        "size": 32
      }
    ],
    "default_title": "ZingMp3 Presence",
    "default_popup": "popup/index.html"
  }
}
